<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.deas.beaconite">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:name=".BeaconReferenceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MonitoringActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".RangingActivity"
            android:label="@string/title_activity_ranging"
            android:parentActivityName=".MonitoringActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MonitoringActivity"/>
        </activity>
        <activity android:name=".MonitoringActivityBefore">
        </activity>

        <service android:name=".BeaconDataService">
            <intent-filter>
                <action android:name="com.example.deas.beaconite.BeaconDataService"/>
            </intent-filter>
        </service>

        <activity
            android:name=".GraphActivity"
            android:label="Graph"
            android:parentActivityName=".RangingActivity">
        </activity>
        <activity
            android:name=".GenerateCaches"
            android:label="@string/title_activity_generate_caches"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>