<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:text="Monitoring events and App status"/>

    <Button
        android:id="@+id/restartBeaconSimulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="restartBeaconSimulation"
        android:text="@string/restartBeaconSimulation"/>

    <Button
        android:id="@+id/resetAllDataService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="removeAllDataBtn"
        android:text="@string/resetAllData"/>


    <Button
        android:id="@+id/rangingActivity_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="onRangingBtnClicked"
        android:text="@string/rangingTable"/>

    <Button
        android:id="@+id/graphActivity_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:onClick="onGraphBtnClicked"
        android:text="@string/startGraphActivity"/>

    <Button
        android:id="@+id/cachesActivity_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onCacheActivityBtnClicked"
        android:text="@string/startCacheActivity"/>

    <Button
        android:id="@+id/loadCaches_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onLoadCachesFromFileBtnClicked"
        android:text="@string/loadCaches"/>

    <Button
        android:id="@+id/whereAmI_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onWhereAmIBtnClicked"
        android:text="@string/whereAmI"/>

    <Button
        android:id="@+id/exitBeaconite_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="exitBeaconite"
        android:text="@string/exitBeaconite"/>

</LinearLayout>
